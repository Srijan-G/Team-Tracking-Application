<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bglogin3"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Login"

        android:textColor="#fefdfd"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#fefdfd"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="30sp"
        android:layout_gravity="center"

        android:ems="10"
        android:textColor="#000"
        android:hint="Enter email"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_round"
        android:inputType="textEmailAddress"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#fefdfd"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:background="@drawable/edit_round"
        />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Submit"
        android:textColor="#ffff"

        android:background="@drawable/buttonbackg"
        android:textAllCaps="false"
        />
    <!--Submitoption is actually a function which when called opens the next page-->
    <!--buttonbackg is a file which I have created in order to make rounded buttons-->
    <TextView
        android:id="@+id/text_viewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Sign up!"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        />
    <ImageView
        android:layout_width="226dp"
        android:layout_height="196dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/loginpic" />

</LinearLayout>